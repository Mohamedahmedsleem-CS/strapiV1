{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "banner": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "price": {
      "type": "decimal"
    },
    "instantDelivery": {
      "type": "boolean"
    },
    "files": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "whatsIncluded": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "البهارات والتوابل",
        "الأعشاب الطبية",
        "البن والقهوة",
        "المكسرات والفواكه المجففة",
        "الحبوب والبقوليات",
        "الزيوت الطبيعية",
        "العسل ومنتجات النحل",
        "التمور والعجوة",
        "المشروبات والشاي",
        "التوابل الحارة والصلصات",
        "الخلطات الجاهزة",
        "منتجات العناية الشخصية الطبيعية",
        "مستلزمات تحضير الأعشاب",
        "منتجات موسمية",
        "هدايا وعبوات مميزة",
        "منتجات طبية تكميلية",
        "مواد خام للطهي والحلويات",
        "بخور  و عود",
        "عطور",
        "كريمات وشامبو",
        "عروض وتخفيضات",
        "مجموعات"
      ]
    },
    "isWeighed": {
      "type": "boolean"
    },
    "unit": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::unit.unit"
    },
    "quantity_options": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::quantity-option.quantity-option"
    },
    "originalPrice": {
      "type": "decimal"
    },
    "isBestSeller": {
      "type": "boolean",
      "default": false
    },
    "benefits": {
      "type": "blocks"
    },
    "usageMethods": {
      "type": "blocks"
    },
    "warnings": {
      "type": "blocks"
    },
    "reviewImages": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    }
  }
}
